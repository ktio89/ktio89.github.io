---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.25}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% if page.news and site.announcements.enabled %}
      <h3>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">News</a>
      </h3>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Latest posts -->
    {% if site.latest_posts.enabled %}
      <h3>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">Latest Posts</a>
      </h3>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h3>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">Featured Publications</a>
      </h3>  
      * = Co-first authorship. The full publication list can be found
      <a href="{{ '/publications/' | relative_url }}" style="color: #0076df">here</a>.
      {% include selected_papers.liquid %}
      <br>
    {% endif %}
    
    <!-- Experience -->  
    <div class="Academic Experience">
      <h2>Academic Experience</h2>
      <p>
        <b>Yonsei University</b><sup>2022.09 - Expected 2027</sup><br>
        Ph.D. student in AI<br>Advisor: <a href="http://jinyeo.weebly.com">Prof. Jinyoung Yeo</a><br>
      </p>
      <p>
        <b>Yonsei University</b><sup>2018.03 - 2022/02</sup><br>
        B.Sc. in Mechanical Engineering
      </p>
      <p>
        <b>National Taiwan University</b><sup>2016.09 - 2018.03 (Voluntarily Ceased)</sup><br>
        B.Sc. in Mechanical Engineering
      </p>
      <p>
        <b>HSNU</b> (The Affiliated Senior High School of National Taiwan Normal University)<br>
        Math and Science Concentration
      </p>
      <p>
        <b>Tianmu Junior High School & Elementary School</b><br>
        The tallest kid in my grade
      </p>
    </div>


    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter.enabled and site.footer_fixed %}
      {% include scripts/newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
